<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sales Report</title>
  <link rel="stylesheet" href="/css/report.css" />
</head>
<body>
  <%- include('nav') %>

  <main>
    <h1>Sales Report</h1>

    <!-- Date Range Filter -->
    <section class="filters">
      <label for="fromDate">From:</label>
      <input type="date" id="fromDate" />
      <label for="toDate">To:</label>
      <input type="date" id="toDate" />
      <button onclick="generateReport()">Generate Report</button>
    </section>

    <!-- Report Summary -->
    <section id="reportSummary" style="display:none;">
      <div class="card">
        <h2>Summary</h2>
        <p><strong>Total Sales:</strong> <span id="totalSales">â‚¹0</span></p>
        <p><strong>Highest Selling Product:</strong> <span id="topProduct">-</span></p>
        <p><strong>Highest Purchasing Customer:</strong> <span id="topCustomer">-</span></p>
      </div>

      <div class="card">
        <h3>Product Sales Breakdown</h3>
        <table>
          <thead>
            <tr>
              <th>Product</th>
              <th>Quantity Sold</th>
              <th>Total Value</th>
            </tr>
          </thead>
          <tbody id="productTable"></tbody>
        </table>
      </div>
    </section>
  </main>

  <script src="/js/report.js"></script>
</body>
</html>
